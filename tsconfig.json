{
    "compilerOptions": {
      "baseUrl": "." /* Base directory to resolve non-absolute module names. */,
      "paths": {
        "~/*": [
          "src/*"
        ],
        "assets/*": [
          "assets/*"
        ]
      },
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react-native",
      "lib": ["es2017"],
      "moduleResolution": "node",
      "noEmit": true,
      "strict": true,
      "target": "esnext"
    },
    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js"
    ]
  }